<div class="item">
    <div> <label for="avatar_url">Avatar url</label> </div>
    <div> <input type="url" name="avatar_url" placeholder="http://"
    value = "{{instructor.avatar_url}}"> </div>
</div>

<div class="item">
    <div> <label for="name">Instrutor</label> </div>
    <div> <input type="text" name="name" placeholder="Nome do instrutor"
    value="{{instructor.name}}"> </div>
</div>

<div class="item">
    <div> <label for="birth">Data de Nascimento</label> </div>
    <div> <input type="date" name="birth" value="{{instructor.birth}}"> </div>
</div>

<div class="item">
    <div> <label for="gender">Sexo</label> </div>
    <div class="label-radio"> 
        <input type="radio" name="gender" id="male" value="M" 
        {% if instructor.gender == "M" %}
            checked
        {% endif %} > 
        <label for="male">Masculino</label> 
    </div>
    <div class="label-radio"> 
        <input type="radio" name="gender" id="female" value="F" 
        {% if instructor.gender == "F" %}
            checked
        {% endif %}> 
        <label for="female">Feminino</label> 
    </div>
</div>

<div class="item">
    <div> <label for="services">Área de Atuação</label> </div>
    <div> <input type="text" name="services" placeholder="Separe os serviços do instrutor por virgula"
    value="{{instructor.services}}""> </div>
</div>

<button type="submit">Salvar</button>
