{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">

        <a href="/instructors/create">Novo</a>
        
        <table>
            <thead>
                <tr>
                    <th>Instrutor</th>
                    <th>Atuação</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>

                {% for instructor in instructors %}
                    <tr>
                        <td>
                        <span style="background: url('{{instructor.avatar_url}}') no-repeat top center /cover"></span>
                        {{instructor.name}}</td>
                        <td>  
                            {{instructor.services}} 
                        </td>
                        <td>
                            <a href="/instructors/{{instructor.id}}/edit">Editar</a>
                            <a href="/instructors/{{instructor.id}}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
                

            </tbody>
        
        </table>
           

    </div>
{% endblock %}