{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar">
        </section>
    
        <form class="details" method="POST" action="/instructors">

            <h3>Novo Instrutor</h3>

            <div class="item">
                <div> <label for="avatar_url">Avatar url</label> </div>
                <div> <input type="url" name="avatar_url" placeholder="http://"> </div>
            </div>

            <div class="item">
                <div> <label for="name">Instrutor</label> </div>
                <div> <input type="text" name="name" placeholder="Nome do instrutor"> </div>
            </div>

            <div class="item">
                <div> <label for="birth">Data de Nascimento</label> </div>
                <div> <input type="date" name="birth"> </div>
            </div>

            <div class="item">
                <div> <label for="gender">Sexo</label> </div>
                <div class="label-radio"> 
                    <input type="radio" name="gender" id="male" value="M" > 
                    <label for="male">Masculino</label> 
                </div>
                <div class="label-radio"> 
                    <input type="radio" name="gender" id="female" value="F" > 
                    <label for="female">Feminino</label> 
                </div>
            </div>

            <div class="item">
                <div> <label for="services">Área de Atuação</label> </div>
                <div> <input type="text" name="services" placeholder="Separe os serviços do instrutor por virgula"> </div>
            </div>

            <button type="submit">Salvar</button>
        </form>

    </div>
{% endblock %}